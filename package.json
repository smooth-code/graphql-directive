{
  "name": "graphql-directive",
  "version": "0.1.0",
  "main": "lib/index.js",
  "repository": "git@github.com:smooth-code/graphql-directive.git",
  "author": "Greg Berg√© <greg@smooth-code.com>",
  "keywords": [
    "graphql",
    "graphql-custom-directives",
    "graphql-tools",
    "directive",
    "directives"
  ],
  "license": "MIT",
  "scripts": {
    "build": "rm -rf lib/ && NODE_ENV=production babel src -d lib",
    "ci": "yarn lint && yarn build && yarn test",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "eslint .",
    "prepublishOnly": "yarn build",
    "release": "yarn build && standard-version && conventional-github-releaser -p angular",
    "test": "jest --runInBand --coverage && codecov"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!.eslintrc.js",
      "!**/lib/**",
      "!**/examples/**",
      "!**/node_modules/**"
    ]
  },
  "peerDependencies": {
    "graphql": "^0.11.0"
  },
  "dependencies": {
    "graphql-tools": "^2.12.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "codecov": "^3.0.0",
    "conventional-github-releaser": "^2.0.0",
    "date-fns": "^1.29.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "graphql": "^0.11.7",
    "jest": "^21.2.1",
    "prettier": "^1.9.1",
    "standard-version": "^4.2.0"
  }
}
